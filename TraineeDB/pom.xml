<!-- 		    	<version>3.2.2</version> -->
<!-- 		    </plugin>		 -->
			
		</plugins>
		
		
		<!--加载自定义包下 *.xml 等文件-->

		   <resources>
		      <resource>
		         <directory>src/main/java</directory>
		         <includes>
		            <include>**/*.properties</include>
